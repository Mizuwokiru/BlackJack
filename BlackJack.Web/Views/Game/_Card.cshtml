                    @Html.DisplayCard(CardHelper.BlankCard)
                }
                else
                {*@
                    @foreach (var card in Model.Cards)
                    {
                        @Html.DisplayCard(CardHelper.GetCard(card.Suit, card.Rank))
                    }
                @*}*@
            </p>
        </div>
    </div>
</div>