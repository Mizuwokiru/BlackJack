@using BlackJack.Shared
@using System.Linq
@model GameCreateViewModel
@{
    ViewBag.Title = "CreateGame";
    Layout = "_Layout";
}

<h2>@Model.UserId</h2>
<form asp-controller="Game" asp-action="" asp-all-route-data="@(new Dictionary<string, string> { { "userId", Model.UserId.ToString() }, { "botCount", Model.BotCount.ToString() } })" class="bj-centered-block">
    <select asp-for="BotCount" asp-items="@(new SelectList(Enumerable.Range(0, Constants.MaxBotCount + 1)))"
            class="form-control bj-centered-control"></select>

    <input type="submit" class="btn btn-primary bj-centered-control" value="Start" />
</form>