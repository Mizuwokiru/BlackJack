@model List<IEnumerable<HistoryRoundViewModel>>
@{
    ViewBag.Title = "Game history";
    Layout = "_Layout";
}

<div id="round-history-block" class="my-4 w-75 mx-auto">
    <div class="accordion">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="card">
                <a class="btn btn-success p-3" href="#" id="round-@i" data-toggle="collapse" data-target="#collapse-round-@i"
                   aria-expanded="false" aria-controls="collapse-round-@i">
                    Round @(i + 1)
                </a>

                <div id="collapse-round-@i" class="collapse" aria-labelledby="round-@i" data-parent="#round-history-block">
                    <div class="card-body">
                        @foreach (var player in Model[i])
                        {
                            <h4>@player.PlayerName's cards:</h4>
                            @foreach (var card in player.Cards)
                            {
                                <p>@card.Rank of @card.Suit</p>
                            }
                            <h4>@player.State</h4>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <footer class="mt-4">
        <div class="inner">
            <nav id="round-pages" class="text-center" aria-label="...">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">
                            2
                            <span class="sr-only">(current)</span>
                        </span>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </footer>
</div>

@section Styles {
    <link href="~/css/History/Game.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/History/Game.js"></script>
}