@model IEnumerable<HistoryGameViewModel>

@{
    ViewBag.Title = "Game history";
    Layout = "_Layout";
}

<div id="game-history-block" class="my-4 w-75 mx-auto">
    @foreach (var historyGame in Model)
    {
        <div class="row">
            <a class="col btn btn-success mb-4 shadow-sm text-decoration-none text-white" href="#">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-start flex-column">
                            <div>Player count: @historyGame.PlayerCount</div>
                            <div>Round count: @historyGame.RoundCount</div>
                        </div>
                        <small>@historyGame.CreationTime.ToString("yyyy-MM-dd HH:mm")</small>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

@section Styles {
    <link href="~/css/History/Index.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/History/Index.js"></script>
}