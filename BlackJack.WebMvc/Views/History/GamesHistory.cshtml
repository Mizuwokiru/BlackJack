@model GamesHistoryViewModel
@{
    ViewData["Title"] = "Index";
    int gameIndex = 0;
}

<link href="~/css/History/GamesHistory.css" rel="stylesheet" />

<div class="my-4 w-75 mx-auto">
    @foreach (var game in Model.Games)
    {
        <div class="row">
            <a asp-action="RoundsHistory" asp-route-gameSkipCount="@gameIndex" class="col btn btn-outline-primary mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-start flex-column">
                            <div class="font-600">Player count: @game.PlayerCount</div>
                            <div class="font-600">Round count: @game.RoundCount</div>
                        </div>
                        <small class="font-600">@game.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</small>
                    </div>
                </div>
            </a>
        </div>
        gameIndex++;
    }
</div>
