<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <title>@ViewBag.Title - BlackJack.WebMvc</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex w-100 h-100 mx-auto flex-column">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light sticky-top bg-light row col shadow-sm">
                <a asp-controller="Game" asp-action="" class="navbar-brand mr-auto">Black Jack</a>
                @if (User.Identity.IsAuthenticated)
                {
                <div class="inner">
                    <span class="navbar-text mr-2"><strong>@User.Identity.Name</strong> is logged</span>
                    <button class="btn btn-outline-primary mb-1">Sign out</button>
                </div>
                }
            </nav>
        </header>
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
